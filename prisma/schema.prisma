// This is your Prisma schema file
// Ottimizzato per coerenza con le Server Actions e gestione Float per i voti.

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // Prisma 7 con adapter esterno (PrismaNeon): l'URL è gestito da prisma.config.ts
  // e dal costruttore PrismaNeon in app/lib/prisma.ts. Non serve qui.
}

// ── ENUM ──────────────────────────────────────────────────────────────────────

enum Role {
  USER
  ADMIN
}

enum BookStatus {
  TO_READ
  READING
  READ
  WISHLIST
}

enum SuggestionCategory {
  FEATURE
  UI_UX
  BUG
  PERFORMANCE
  OTHER
}

enum SuggestionStatus {
  PENDING
  UNDER_REVIEW
  ACCEPTED
  REJECTED
  IMPLEMENTED
}

// ── MODELS ────────────────────────────────────────────────────────────────────

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  books       Book[]
  suggestions Suggestion[]
}

model Book {
  id            String     @id @default(cuid())
  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Stato e Metadati utente
  status        BookStatus @default(TO_READ)
  rating        Float?     // Supporta mezzi voti (es. 7.5)
  comment       String?    @db.Text
  tags          String?    // CSV: "fantasy,storico"
  formats       String?    // CSV: "cartaceo,kindle"
  
  // Dati Google Books API
  googleId      String?
  title         String
  author        String?
  isbn          String?
  publisher     String?
  publishedDate String?
  language      String?
  pageCount     Int?
  coverUrl      String?
  description   String?    @db.Text
  
  // Posizionamento UI
  roomConfig    Json?      // Esempio: { "x": 10, "y": 20, "variant": "amber" }
  
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  purchasedAt   DateTime?
  startedAt     DateTime?
  finishedAt    DateTime?

  @@index([userId])
  @@index([status])
}

model Suggestion {
  id          String             @id @default(cuid())
  userId      String
  user        User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  title       String
  description String             @db.Text
  category    SuggestionCategory @default(OTHER)
  status      SuggestionStatus   @default(PENDING)
  adminNote   String?            @db.Text

  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  @@index([userId])
  @@index([status])
}